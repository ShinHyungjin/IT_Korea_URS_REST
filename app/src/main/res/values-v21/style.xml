<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:buttonStyle">@style/ButtonStyle</item>
        <item name="editTextStyle">@style/EditTextStyle</item>
        <item name="android:colorControlNormal">@color/edit_one</item>
        <item name="android:colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="category">
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tablemapfour">
        <item name="android:background">@drawable/four</item>
    </style>

    <style name="tablemaptwo">
        <item name="android:background">@drawable/two</item>
    </style>

    <style name="tablemapnulltable">
        <item name="android:background">@drawable/nulltable</item>
    </style>

    <style name="tablemapunavail">
        <item name="android:background">@drawable/unavail</item>
    </style>

    <style name="defaultButton" parent="@android:style/Widget.Button">
        <item name="android:colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/opacitybutton</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:textColorHighlight">@color/edit_three</item>
    </style>

    <!--
    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:colorControlNormal">@color/edit_one</item>
        <item name="android:colorControlActivated">@color/edit_two</item>
        <item name="android:textColorHighlight">@color/edit_three</item>
    </style>
    -->


</resources>